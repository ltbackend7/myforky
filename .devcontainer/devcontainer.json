{
    "name": "Auto-execute setup",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu", // Use any base image

    // Optional: Features to install additional tools in the container
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:1": {}
    },

    // Ensuring bash as the default shell
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },

    // Command(s) to run after the container is created
    "postCreateCommand": "apt-get update && apt-get upgrade -y && chmod +x ./build.sh && ./build.sh"
}
